<html>
  <head>
    <meta charset="UTF-8">
    <link rel="stylesheets" href="home.scss">
    <title>Craftsman's Master Stroke</title>
  </head>  

  <body>
    <header>
      <div class="heading">
        <div class="title">CraMasS</div>
        <div class="detail">〜クラフトマンズ ・ マスターストローク〜</div>
    </header>
    <div class="contents">   
      <div class="box">
        <% if user_signed_in? %>
          <div class="cta-btn">
            <%= link_to "マイページ", "/users/#{current_user.id}" %>
          </div>
          <div class="cta-btn">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
          </div>
          <div class="cta-btn">
            <%= link_to  "機械を登録する", "/machines/new" %>
          </div>
        <% else %>
          <div class="cta-btn">
            <%= link_to "ログイン", new_user_session_path %>
          </div>
          <div class="cta-btn">
            <%= link_to "アカウント登録", new_user_registration_path %>
          </div>
        <% end %>
      </div>
    </div>
    <footer>
    </footer>
  </body>
  
</html>